<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Edit Contact</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form method="post" action="/contact/update">
        <input
          type="hidden"
          name="oldName"
          value="<%=  contact.oldName || contact.name %>"
        />
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            value="<%= contact.name %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">Phone Number</label>
          <input
            type="text"
            class="form-control"
            id="nohp"
            name="nohp"
            value="<%= contact.nohp %>"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">Save Contact</button>
      </form>
    </div>
  </div>
</div>
