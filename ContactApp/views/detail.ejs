<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger" role="alert">
        Contact not found!
        <a href="/contact" class="btn btn-primary badge">Back</a>
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%- contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%- contact.nohp %>
          </h6>
          <p class="card-text"><%- contact.email %></p>
          <a href="/contact/edit/<%= contact.name %>" class="btn btn-info badge"
            >Edit</a
          >
          <a
            href="/contact/delete/<%= contact.name %>"
            class="btn btn-danger badge"
            onclick="return confirm('Delete this contact?')"
            >Delete</a
          >
          <a href="/contact" class="btn btn-primary badge"
            >Back</a
          >
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
